
<h2>Rating statistics</h2>

<div class="row">
  <div class="col-md-4">
    <h4>Best beers</h4>
    <%= render 'list', items: @beers %>
  </div>
  <div class="col-md-4">
    <h4>Best breweries</h4>
    <%= render 'list', items: @breweries %>
  </div>
  <div class="col-md-4">
    <h4>Best styles</h4>
    <%= render 'list', items: @styles %>
  </div>
</div>

  <h2>Most active users</h2>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th></th>
      <th>favorite beer</th>
      <th>preferred style</th>
      <th>favorite brewery</th>
      <th>ratings</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <% if user.favorite_beer.nil? %>
          <td><% puts "no favorite beer" %></td>
          <td><% puts "no favorite style" %></td>
          <td><% puts "no favorite brewery" %></td>
          <td><% puts "no ratings" %></td>
            <%else%>
          <td><%= link_to user.favorite_beer.name, user.favorite_beer %></td>
          <td><%= link_to user.favorite_style.name, user.favorite_style %></td>
          <td><%= link_to user.favorite_brewery.name, user.favorite_brewery %></td>
          <td><%= user.ratings.count %></td>
            <%end%>
        </tr>
    <% end %>
    </tbody>

  </table>
</table>

<h2>Most recent ratings</h2>

  <ul>
    <% @recent.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, rating.user %></li>
    <% end %>
  </ul>

<%= link_to "new rating", new_rating_path, class:'btn btn-success'%>