<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th></th>
    <th>average</th>
  </tr>
  </thead>

  <tbody>
  <%if items.empty? %>
      <% item.name = "not rated"%>
      <% else%>
  <% items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= round(item.average_rating) %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>